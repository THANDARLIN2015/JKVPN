    <script>
        // Thailand Time and Date with digital clock effect
        function updateThaiTime() {
            const options = { 
                timeZone: 'Asia/Bangkok',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: false
            };
            const dateOptions = {
                timeZone: 'Asia/Bangkok',
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            };
            
            const now = new Date();
            document.getElementById('thai-time').textContent = now.toLocaleTimeString('en-US', options);
            document.getElementById('thai-date').textContent = now.toLocaleDateString('en-US', dateOptions);
        }
        
        setInterval(updateThaiTime, 1000);
        updateThaiTime();
        
        // Thailand Weather Data (using static data since we don't have API access)
        function fetchThailandWeather() {
            const locations = [
                { city: 'Bangkok', temp: 32, condition: 'Partly Cloudy', icon: '⛅' },
                { city: 'Chiang Mai', temp: 28, condition: 'Sunny', icon: '☀️' },
                { city: 'Phuket', temp: 30, condition: 'Rainy', icon: '🌧️' },
                { city: 'Pattaya', temp: 31, condition: 'Cloudy', icon: '☁️' },
                { city: 'Khon Kaen', temp: 29, condition: 'Sunny', icon: '☀️' }
            ];
            
            // Select a random location or use the first one
            const location = locations[0]; // Using Bangkok as default
            
            document.getElementById('thai-weather').innerHTML = 
                `${location.icon} ${location.temp}°C (${location.condition})`;
            document.getElementById('thai-location').textContent = location.city;
        }
        
        // Initialize weather
        fetchThailandWeather();
        
        // Initialize line chart
        function initLineChart() {
            const chartPath = document.getElementById('chart-path');
            const pointsContainer = document.getElementById('chart-points-container');
            pointsContainer.innerHTML = '';
            
            // Generate random data points
            const pointCount = 12;
            const points = [];
            let pathData = 'M0,50 ';
            
            for (let i = 0; i < pointCount; i++) {
                // Random value between 10% and 90% of chart height
                const value = 10 + Math.random() * 80;
                const x = (i / (pointCount - 1)) * 100;
                const y = 100 - value;
                
                points.push({ x, y });
                
                // Add to path data
                pathData += `L${x},${y} `;
                
                // Create point element
                const point = document.createElement('div');
                point.className = 'chart-point';
                point.style.left = `${x}%`;
                point.style.top = `${y}%`;
                pointsContainer.appendChild(point);
            }
            
            chartPath.setAttribute('d', pathData);
        }
        
        // Server status and user count simulation with 150 user limit
        // Store server data in localStorage to persist across refreshes
        function getServerData() {
            const savedData = localStorage.getItem('serverData');
            if (savedData) {
                return JSON.parse(savedData);
            }
            
            // Initial data if none exists
            return {
                servers: [
                    { name: "Thailand Server 1", status: "online", users: 112, ping: 18 },
                    { name: "Thailand Server 2", status: "online", users: 98, ping: 22 },
                    { name: "Thailand Server 3", status: "online", users: 87, ping: 25 },
                    { name: "Thailand Server 4", status: "online", users: 132, ping: 20 },
                    { name: "Thailand Server 5", status: "warning", users: 76, ping: 35 },
                    { name: "Thailand Server 6", status: "online", users: 105, ping: 15 },
                    { name: "Singapore Server 1", status: "online", users: 145, ping: 42 },
                    { name: "Singapore Server 2", status: "online", users: 128, ping: 38 },
                    { name: "Japan Server 1", status: "online", users: 132, ping: 68 },
                    { name: "Japan Server 2", status: "online", users: 118, ping: 72 },
                    { name: "India Server 1", status: "warning", users: 76, ping: 112 },
                    { name: "India Server 2", status: "online", users: 92, ping: 105 }
                ],
                lastUpdate: Date.now()
            };
        }
        
        function saveServerData(data) {
            localStorage.setItem('serverData', JSON.stringify(data));
        }
        
        function updateServerStatus() {
            const serverData = getServerData();
            const serverRows = document.querySelectorAll('.server-table tbody tr');
            let totalUsers = 0;
            
            serverRows.forEach((row, index) => {
                const server = serverData.servers[index];
                const userCell = row.querySelector('.server-users');
                const maxUsers = parseInt(userCell.getAttribute('data-max'));
                
                // Only update if data is more than 5 minutes old (simulate real changes)
                if (Date.now() - serverData.lastUpdate > 300000) {
                    const change = Math.floor(Math.random() * 6 - 3); // Random change between -3 and +3
                    server.users = Math.max(0, Math.min(maxUsers, server.users + change));
                    
                    // Update ping (only slightly)
                    server.ping = Math.max(10, server.ping + Math.floor(Math.random() * 6 - 3));
                    
                    // Random status changes (10% chance)
                    if (Math.random() < 0.1 && server.status !== "offline") {
                        server.status = ["online", "warning"][Math.floor(Math.random() * 2)];
                    }
                    
                    // Random server outage (5% chance)
                    if (Math.random() < 0.05 && server.status !== "offline") {
                        server.status = "offline";
                        server.users = 0;
                        
                        // Set server back online after 1-3 minutes
                        setTimeout(() => {
                            server.status = "online";
                            saveServerData(serverData);
                            updateServerDisplay(); // Refresh display
                        }, 60000 + Math.random() * 120000);
                    }
                }
                
                // Update display
                const statusIndicator = row.querySelector('.status-indicator');
                statusIndicator.className = 'status-indicator';
                statusIndicator.classList.add(`status-${server.status}`);
                
                userCell.textContent = server.users;
                totalUsers += server.users;
                
                // Update progress bar
                const loadPercentage = (server.users / maxUsers) * 100;
                const progressBar = row.querySelector('.progress-bar');
                progressBar.style.width = `${loadPercentage}%`;
                
                // Update progress bar color based on load
                if (loadPercentage > 80) {
                    progressBar.style.backgroundColor = 'var(--warning-color)';
                } else if (loadPercentage > 50) {
                    progressBar.style.backgroundColor = 'var(--success-color)';
                } else {
                    progressBar.style.backgroundColor = 'var(--primary-color)';
                }
                
                // Update ping display
                const pingCell = row.querySelector('.ping-value');
                pingCell.textContent = `${server.ping} ms`;
            });
            
            // Update total users
            document.getElementById('total-users').textContent = totalUsers;
            
            // Save updated data if we made changes
            if (Date.now() - serverData.lastUpdate > 300000) {
                serverData.lastUpdate = Date.now();
                saveServerData(serverData);
            }
            
            // Update line chart
            initLineChart();
        }
        
        function updateServerDisplay() {
            const serverData = getServerData();
            const serverRows = document.querySelectorAll('.server-table tbody tr');
            let totalUsers = 0;
            
            serverRows.forEach((row, index) => {
                const server = serverData.servers[index];
                const userCell = row.querySelector('.server-users');
                const maxUsers = parseInt(userCell.getAttribute('data-max'));
                
                // Update status indicator
                const statusIndicator = row.querySelector('.status-indicator');
                statusIndicator.className = 'status-indicator';
                statusIndicator.classList.add(`status-${server.status}`);
                
                // Update user count
                userCell.textContent = server.users;
                totalUsers += server.users;
                
                // Update progress bar
                const loadPercentage = (server.users / maxUsers) * 100;
                const progressBar = row.querySelector('.progress-bar');
                progressBar.style.width = `${loadPercentage}%`;
                
                // Update progress bar color based on load
                if (loadPercentage > 80) {
                    progressBar.style.backgroundColor = 'var(--warning-color)';
                } else if (loadPercentage > 50) {
                    progressBar.style.backgroundColor = 'var(--success-color)';
                } else {
                    progressBar.style.backgroundColor = 'var(--primary-color)';
                }
                
                // Update ping display
                const pingCell = row.querySelector('.ping-value');
                pingCell.textContent = `${server.ping} ms`;
            });
            
            // Update total users
            document.getElementById('total-users').textContent = totalUsers;
        }
        
        // Ping refresh every 5 seconds
        function refreshPing() {
            const serverData = getServerData();
            const serverRows = document.querySelectorAll('.server-table tbody tr');
            
            serverRows.forEach((row, index) => {
                const server = serverData.servers[index];
                if (server.status !== "offline") {
                    // Slightly adjust ping (simulate real network fluctuations)
                    const change = Math.floor(Math.random() * 5 - 2); // -2 to +2
                    server.ping = Math.max(10, server.ping + change);
                    
                    // Update ping display
                    const pingCell = row.querySelector('.ping-value');
                    pingCell.textContent = `${server.ping} ms`;
                }
            });
            
            // Save the updated ping values
            saveServerData(serverData);
        }
        
        // Initial updates
        initLineChart();
        updateServerDisplay();
        
        // Set up intervals
        setInterval(refreshPing, 5000); // Refresh ping every 5 seconds
        setInterval(updateServerStatus, 300000); // Update server status every 5 minutes
        
        // Copy plan code functionality
        function copyCode(codeId) {
            const codeElement = document.getElementById(codeId);
            const code = codeElement.textContent;
            const tooltipId = 'tooltip' + codeId.slice(4);
            const tooltip = document.getElementById(tooltipId);
            
            navigator.clipboard.writeText(code).then(() => {
                // Show tooltip
                tooltip.style.opacity = '1';
                
                // Hide tooltip after 2 seconds
                setTimeout(() => {
                    tooltip.style.opacity = '0';
                }, 2000);
            });
        }
        
        // Dark/Light Mode Toggle
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;
        
        // Check for saved theme preference or use preferred color scheme
        const savedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
            body.classList.add('dark-mode');
            themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
        }
        
        themeToggle.addEventListener('click', () => {
            body.classList.toggle('dark-mode');
            
            if (body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
            } else {
                localStorage.setItem('theme', 'light');
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
            }
        });
    </script>
</body>
</html>
